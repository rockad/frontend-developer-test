{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true,
    "mongo": true,
    "jest": true
  },
  "rules": {
    "react/no-multi-comp": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-indent": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,
    // not sure why airbnb turned this on. gross!
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "no-alert": 0,
    "semi": [
      "warn",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "object-curly-spacing": 0,
    "linebreak-style": 0,
    "consistent-return": 0,
    "no-unexpected-multiline": 2,
    "compat/compat": 2
  },
  "plugins": [
    "react",
    "import",
    "flowtype",
    "compat"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    },
    "polyfills": [
      "fetch"
    ]
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
